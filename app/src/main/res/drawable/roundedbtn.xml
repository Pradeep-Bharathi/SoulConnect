<!-- rounded_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="#FFFFFF" /> <!-- Button background color -->
    <corners android:radius="15dp" /> <!-- Adjust the radius to make the border more curved -->
    <stroke
        android:width="1dp"
    android:color="#000000" /> <!-- Border color -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" /> <!-- Inner padding for the inner border -->
</shape>
